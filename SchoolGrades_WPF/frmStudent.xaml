<Window x:Class="SchoolGrades_WPF.frmStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolGrades_WPF"
        mc:Ignorable="d"
        Title="Gestione Studenti" Height="450" Width="800">
    <Grid Background="PowderBlue" Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170">

            </ColumnDefinition>
            <ColumnDefinition>

            </ColumnDefinition>
            <ColumnDefinition>

            </ColumnDefinition>
            <ColumnDefinition>

            </ColumnDefinition>
            <ColumnDefinition>

            </ColumnDefinition>
            <ColumnDefinition>

            </ColumnDefinition>



        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80">

            </RowDefinition>
            <RowDefinition Height="90*">

            </RowDefinition>
            <RowDefinition Height="54*">

            </RowDefinition>
            <RowDefinition Height="69*">

            </RowDefinition>
            <RowDefinition Height="35*">

            </RowDefinition>
            <RowDefinition Height="47*" >

            </RowDefinition>
            <RowDefinition Height="37*" >

            </RowDefinition>
            <RowDefinition Height="29*"  >

            </RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" FontSize="18" Margin="10,0,10,0">
            Cod.allievo
        </TextBlock>
        <TextBox Grid.Column="0" Margin="10,28,39,0" Height="27" VerticalAlignment="Top" />

        <TextBlock Grid.Column="1" FontSize="18" Margin="10,0,10,0">
            Cognome
        </TextBlock>
        <TextBox Grid.Column="1" Margin="10,28,10,0" Height="27" VerticalAlignment="Top" />

        <TextBlock Grid.Column="2" FontSize="18" Margin="10,0,10,0">
            Nome
        </TextBlock>
        <TextBox Grid.Column="2" Grid.ColumnSpan="2" Margin="10,28,38,0" Height="27" VerticalAlignment="Top" />

        <TextBlock Grid.Row="1" FontSize="18" Margin="10,0,10,13">
            email
        </TextBlock>
        <TextBox Grid.Row="1" Grid.ColumnSpan="2" Margin="10,28,19,0" Height="27" VerticalAlignment="Top" />

        <TextBlock Grid.Column="2" Grid.Row="1" FontSize="18" Margin="10,0,10,13">
            Residenza
        </TextBlock>
        <TextBox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" Margin="10,28,38,0" Height="27" VerticalAlignment="Top" />

        <TextBlock Grid.Column="0" Grid.Row="2" FontSize="18" Margin="10,0,10,6">
            Posto di nascita
        </TextBlock>
        <TextBox Grid.ColumnSpan="2" Grid.Row="2" Margin="10,28,19,0" Height="27" VerticalAlignment="Top" Grid.RowSpan="2" />

        <TextBlock Grid.Column="2" Grid.Row="2" FontSize="18" Margin="10,0,126,6" Grid.ColumnSpan="2">
            Data di nascita
        </TextBlock>
        <TextBox Grid.Column="2" Grid.Row="2" Margin="10,28,14,0" Height="27" VerticalAlignment="Top" Grid.RowSpan="2" />

        <TextBlock Grid.Column="3" Grid.Row="3" FontSize="18" Margin="10,0,10,0">
            Provenienza
        </TextBlock>
        <TextBox Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="3" Margin="10,0,38,0" Height="27" VerticalAlignment="Center" />

        <TextBlock Grid.Column="0" Grid.Row="3" FontSize="18" Margin="10,68,10,15" Grid.RowSpan="2">
            Allievi trovati
        </TextBlock>

        <ListBox Grid.Row="4" Grid.RowSpan="4" Grid.ColumnSpan="2" Background="DarkGray" Margin="10,30,10,10"></ListBox>



        <CheckBox Grid.Column="2" Grid.Row="3" FontSize="13" Margin="0,68,0,0" Grid.RowSpan="2">Disabilitato</CheckBox>
        <CheckBox Grid.Column="3" Grid.Row="3" FontSize="13" Margin="0,68,0,0" Grid.RowSpan="2">BES/DSA</CheckBox>



        <Button Grid.Column="2" Grid.Row="5" FontSize="20" Background="White" Margin="10,5,6,10">Ricerca</Button>
        <Button Grid.Column="3" Grid.Row="5" FontSize="20" Background="White" Margin="10,5,10,11">Pulisci dati</Button>
        <Button Grid.Column="2" Grid.Row="6" FontSize="20" Background="White" Margin="10,2,6,5">Ricerca omonimi</Button>
        <Button Grid.Column="3" Grid.Row="5" FontSize="20"  Background="White" Margin="10,47,10,5" Grid.RowSpan="2">Salva</Button>
        <Button Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="6" Background="White" FontSize="20" Margin="68,37,80,0" Grid.RowSpan="2">Cancella</Button>
        <Button Grid.Column="4" Grid.Row="6" Background="White" FontSize="20" Grid.RowSpan="2" Margin="10,37,10,0">Esci</Button>
        <Button Grid.Column="5" Grid.Row="6" Background="White" FontSize="20" Grid.RowSpan="2" Margin="10,37,10,0">Scegli</Button>

        <Image Grid.Row="0" Grid.RowSpan="5" Grid.Column="4" Grid.ColumnSpan="2" Margin="0,6,0,0"></Image>
    </Grid>
</Window>
